@model CarDealersWebApp.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>@ViewBag.Title</h2>
<hr />
<br />

<div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10 col-md-6">
        <input type="text" class="form-control" id="staticEmail" placeholder="email@example.com" asp-for="Email">
    </div>
</div>
<div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10 col-md-6">
        <input type="password" class="form-control" id="inputPassword" asp-for="Password">
    </div>
</div>